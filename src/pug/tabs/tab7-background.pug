.tab.tab7
    div.relations.col2
        h3 Relations
        span Nom
        span Relation
        span(title='Allié') A
        span(title='Neutre') N
        span(title='Ennemi') E
        fieldset.repeating_relations
            +cbButton('expand', ' ', 1)
            +textInput('name')
            +textInput('relation')
            +cbButton('isAlly', ' ')
            +cbButton('isNeutral', ' ')
            +cbButton('isEnnemy', ' ')
            +hiddenInput('expand', 0)
            +textareaInput('description')(placeholder='Description')

    div.history.col2
        h3 Historique
        span Date
        span Événement
        fieldset.repeating_history
            +cbButton('expand', ' ', 1)
            +textInput('date')
            +textInput('event')
            +hiddenInput('expand', 0)
            +textareaInput('detail')(placeholder='Détails')