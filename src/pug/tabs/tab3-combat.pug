.tab.tab3
    div.col2T1
        div#init.col3
            h3 Initiative
            +textLabelled('baseInit', 'Base', 'baseInit')(readonly)
            +textLabelled('modInit', 'Modificateurs', 'modInit')
            +textLabelled('totalInit', 'Total', 'totalInit')(readonly)
            div
                span Rapide:
                //-+actButton('quickAdv', 1)
                +rollButton('quickInit', '[[@{reflex} &{tracker:+}]]')
            div
                span Initiative !
                +actButton('initRoll')
        div#movement.col3
            h3 Mouvement
        div#armor.col3
            h3 Armure
    div#health.col3
        h3 
            span Santé
            span
                +numberInput('hp')
                | /
                +numberInput('hp_max')(readonly)
        span Rang
        span Malus
        span Total
        span Actuel
        fieldset.repeating_health
            +textInput('rank')(readonly)
            +textInput('malus')(readonly)
            +numberInput('total')(readonly)
            +numberInput('current')(readonly)
    div#guard.col2
        h3 Posture
    div#states.col2
        h3 États
    div#weapons.col2T1
        h3 Armes
    div#inventory.col3
        h3 Inventaire