{
  "name": "l5r-v4",
  "version": "1.0.0",
  "description": "Fiche de personnage Roll20 pour L5R 4ème édition",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel compile:sass compile:pug",
    "compile:sass": "sass ./src/l5r.sass ./l5r.css -w --no-charset --style=expanded",
    "compile:pug": "pug --doctype=html ./src/l5r.pug -o ./ -w"
  },
  "author": "Calmacil",
  "license": "ISC",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.55.0"
  }
}
